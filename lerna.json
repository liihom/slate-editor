{
  "version": "1.0.14",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelog": {
    "repo": "slate-editor",
    "cacheDir": ".changelog"
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/demos/**",
    "**/fixtures/**",
    "**/dist/**",
    "**/lib/**",
    "**/es/**",
    "**/test/**"
  ],
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "main",
      "includeMergedTags": true
    },
    "publish": {
      "message": "chore(release): :european_castle: publish",
      "registry": "https://registry.npmjs.org/"
    }
  }
}
